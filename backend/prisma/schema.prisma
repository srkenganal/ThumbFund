generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id    Int     @id @default(autoincrement())
  address String @unique
  task Task[]
}

model Worker {
  id Int @id @default(autoincrement())
  address String @unique
  pending_bal BigInt @default(0)
  locked_bal BigInt @default(0)
  submissions Submission[]
}

model Task {
  id Int @id @default(autoincrement())
  title String @default("Select most clickable thumbnail")
  options Option[]
  signature String
  amount BigInt @default(10000)
  user_id Int
  user User @relation(fields: [user_id], references: [id])
  submissions Submission[]
  done Boolean @default(false)
}

model Option {
  id Int @id @default(autoincrement())
  image_url String
  option_id Int
  task_id Int
  task    Task    @relation(fields: [task_id], references: [id])
  submission Submission[]
}

model Submission {
  id        Int     @id @default(autoincrement())
  option_id Int
  option    Option  @relation(fields: [option_id], references: [id])
  task_id   Int
  task      Task    @relation(fields: [task_id], references: [id])
  worker_id Int
  worker    Worker  @relation(fields: [worker_id], references: [id])
  amount    String

  @@unique([worker_id, task_id]) // Corrected syntax for composite unique constraint
}
